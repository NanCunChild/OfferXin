/* pages/salaryDetail/salaryDetail.wxss */
@import "../../app.wxss";

page {
  padding-top: 20rpx;
  padding-bottom: 160rpx;
}
.top_box {
  background-color: fff;
  margin: 0rpx 30rpx;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
  position: relative;
}
.line {
  width: 80%;
  height: 5rpx;
  background-color: red;
}
.img-container {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  filter: brightness(120%);
  /* background-color: red; */
  position: absolute;
  top: 70%;
  transform: translateY(-70%);
  right: 20rpx;
  background-color: white;
  z-index: -1;
}
.img-container image {
  width: 100%;
  display: block;
}
.top_row1 {
  width: 100%;
}
.top_salary {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.salary {
  margin: 20rpx 0;
  font-weight: 600;
  font-size: 40rpx;
  color: #e97910;
}
.job {
  background: #ebf4fd;
  color: #65b6f6;
  padding: 10rpx;
}
.top_row3 {
  margin: 10rpx 0;
}
.item_key {
  margin: 2rpx 0rpx;
}
.item_value {
  margin: 1rpx 70rpx 0rpx;
  font-weight: 500;
  font-size: 32rpx;
  color: black;
}

.divide_line {
  margin: 20rpx 8%;
  border-bottom: 1px solid #e2dddd;
}

.m_body {
  padding: 0 20rpx;
}
.icon-container {
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* .icon-container .right,
.icon-container .left,
.icon-container .right view {
  display: flex;
  align-items: center;
} */

.icon-container {
  padding: 0 20rpx;
  font-size: 30rpx;
}
.icon-container van-icon {
  font-size: 36rpx;
  margin: 10rpx;
}
.icon-container .right {
  display: flex;
  align-items: center;
  /* justify-content: flex-end; */
}

.trust-box {
  width: 90%;
  height: 120rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  padding: 20rpx;
}
.trust-title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #000;
  margin-bottom: 20rpx;
}
.trust-item {
  display: flex;
}
.trust-item .item {
  flex: 1;
  /* width: 50%; */
  height: 80rpx;
  line-height: 80rpx;
  background: #f3f3f3;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  font-weight: bold;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.trust-item .item image {
  width: 30rpx;
  margin-right: 20rpx;
}

.m_avator {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.m_avator image {
  width: 64rpx;
  height: 64rpx;
}
.m_nickname {
  font-size: 24rpx;
  color: rgb(92, 85, 85);
  font-weight: 550;
  margin-bottom: 8rpx;
}
.m_icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  margin-left: 32rpx;
}
.m_icon2 {
  font-size: 50rpx;
  margin-right: 8rpx;
  margin-left: 32rpx;
}
.l {
  margin-left: 0;
}
.m_button {
  position: absolute;
  top: -30rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.01;
  z-index: 9;
}
.mid_row_icon {
  width: 90%;
  margin-left: 5%;
  justify-content: space-between;
}
.m_icon_2 {
  align-items: center;
  font-size: 60rpx;
  color: #125780;
}
.m_content {
  font-weight: 500;
  font-size: 36rpx;
  color: #464646;
  padding: 20rpx 10rpx;
  margin: 0 5rpx 10rpx 10rpx;
}
.r_box {
  width: 100%;
  background: rgb(255, 255, 255);
  opacity: 1;
  position: fixed;
  left: 0rpx;
  bottom: calc(96rpx + constant(safe-area-inset-bottom));
  bottom: calc(96rpx + env(safe-area-inset-bottom));
  padding: 24rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  z-index: 8;
  display: flex;
  justify-content: left;
}
.r_field {
  width: 80%;
  background-color: rgb(235, 235, 235);
  border-radius: 25rpx;
  padding: 16rpx;
}
.rb_box {
  margin-left: 3%;
}
.r_button {
  font-size: 24rpx;
  font-weight: 600;
  color: #7e6f6f;
  background: transparent;
  border-color: transparent;
  padding: 0;
}
.r_button::after {
  border: none;
}
.share_button {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  background-size: contain;
  background-image: url("data:image/png;base64,");
}

.share_button::after {
  border: none;
}

.m_text {
  padding: 24rpx 0;
}
.m_text2 {
  padding-top: 24rpx;
}

.footer {
  padding: 10rpx 20rpx 0 20rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 277;
  border-top: 1px solid #f0f0f0;
  height: calc(96rpx + constant(safe-area-inset-bottom)); /*兼容 IOS<11.2*/
  height: calc(96rpx + env(safe-area-inset-bottom)); /*兼容 IOS>11.2*/
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
  display: flex;
  align-items: center;
}
.footer .btn {
  width: 100rpx;
  height: 100%;
  margin: 0 20rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.footer .btn image {
  width: 50rpx;
}
.footer .copylink {
  width: 450rpx;
  height: 100%;
  color: #f0f0f0;
  background-image: linear-gradient(to right, #4169e1 0%, #66a6ff 100%);
  border-radius: 50rpx;
  font-size: 26rpx;
}
