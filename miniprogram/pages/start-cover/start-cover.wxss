/* pages/start-cover/start-cover.wxss */
.background-image {
  width: 100%;
  height: 100vh; /* 100% 视窗的高度 */
  position: fixed;
  top: 0;
  left: 0;
  object-fit: cover; /* 图片保持比例填充整个容器 */
}
.goto {
  position: fixed;
  right: 20rpx;
  top: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 20px;
  z-index: 9;
}