/* pages/list/list.wxss */
@import '../../app.wxss';


page {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
} 
 
.contentsPages {
  box-sizing: border-box;
  background: #4169E1;
}
 
.title{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4169E1;
}
.title-item {
  color:white;
  margin-right: 30rpx;
  font-size: 30rpx;
  height: 100%;
}

.title-item-title.active {
  font-weight: bolder;
  font-size: 36rpx;
}
.title-item-bot {
  width: 60rpx;
  height: 0px;
  margin: 8rpx auto 0 auto;
  border-radius: 50px;
}

.title-item-bot.active {
  border: 2px solid white;
}
 
.content{
  width: 100vw;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.left {
  width: 45%;
  text-align: left;
  justify-content: left;
}

.right {
  width: 55%;
  text-align: right;
  justify-content: right;
}

.search_box {
  height: 80rpx;
  width: 100%;
  z-index: 8;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color: white;
}
.search_box van-icon {
  margin-right: 10rpx;
}


/* .box {
  width: 100%;
  height: 300rpx;
  background: #e74c3c;
} */

.tab-box {
  display: flex;
  flex-wrap: wrap;
  height: 280rpx;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.tab-box view{
	width: 49%;
	display: flex;
	height: 120rpx;
	align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bolder;
  background-color: white;
  color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.tab-box2 {
  width: 100%;
  padding: 0 20rpx;
  display: flex;
	height: 80rpx;
	align-items: center;
	justify-content: flex-start;
  z-index: 9999;
  background-color: white;
}

.tab-box2 .tab-item {
  display: flex;
  flex-direction: column;
	height: 100rpx;
	align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  /* background-color: white; */
}
.tab-box2 .tab-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #a3a3a3;
}
.tab-box2 .tab-item-title.active {
  color: #4169E1;
}


.tab-box2 .tab-item-bot {
  width: 40rpx;
  height: 0px;
  margin-top: 12rpx;
  border-radius: 50px;
}
.tab-box2 .tab-item-bot.active {
  border: 2px solid #4169E1;
}

.tab-box3{
  width: 100%;
  padding: 0 20rpx;
  display: flex;
	height: 80rpx;
	align-items: center;
  z-index: 9999;
  background-color: white;
}
.tab-box3 .tab-item-title {
  font-size: 28rpx;
  color: #a3a3a3;
}
.tab-box3 .tab-item3{
  display: flex;
	height: 80rpx;
	align-items: center;
}
.tab-box3 .tab-item-title.active3 {
  color: black;
  font-weight: bolder;
}
.fliter{
  z-index: 10000;
}

.van-dropdown-menu__title {
  font-size: 28rpx !important;
  color: #a3a3a3 !important;
}
.van-dropdown-menu__title--active {
  font-weight: bolder !important;
  color: black !important;
}

.van-dropdown-menu {
  box-shadow: none !important;
}
.van-dropdown-menu__item {
  border: none !important;
  padding: 0;
  margin: 0;
}

.shareContainer[plain]{
  z-index: 8;
  position: fixed;
  left: 0;
  right: 0;
  padding: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 48rpx;
  width: 400rpx;
  height: 100rpx;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 2rpx 2rpx 8rpx #7e6f6f;
  border: none;
  z-index: 10000;
}

.shareImg{
  width: 50rpx;
  height: 50rpx;
}
.shareTxt {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff0000;
}

.itemScroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-items: center;
  width: 100%;
  /* height: 1600rpx; */
  display: flex;
  justify-content: right;
  align-items: center;
  /* border: black 2rpx solid; */
}

.itemBlock {
  display: flex;
  justify-items: center;
  width: 98%;
}

.itemContainer {
  display: flex;
  width: 710rpx;
  height: 160rpx;
  margin:  0 20rpx;
  padding-bottom: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: #dedede 1rpx solid;
  /* border-radius: 20rpx; */
}

.itemLogoContainer {
  display: flex;
  width: 160rpx;
  height: 160rpx;
  position: relative;
}
.tips {
  width: 76rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  color: white;
  position: absolute;
  top: 22rpx;
  left: 6rpx;
  background: linear-gradient(120deg, #005bea 0%, #00c6fb 100%); /*Safari 5.1 - 6.0*/
  background: linear-gradient(120deg, #005bea 0%, #00c6fb 100%); /*Opera 11.1 - 12.0*/
  background: linear-gradient(120deg, #005bea 0%, #00c6fb 100%); /* Firefox 3.6 - 15 */
  background: linear-gradient(120deg, #005bea 0%, #00c6fb 100%); /*标准写法*/ 
  background-image: linear-gradient(120deg, #005bea 0%, #00c6fb 100%);
  transform: skew(20deg);/* 控制邪角 */
  border-radius: 0 10rpx;
}
.itemLogo {
	width: 200rpx;
	height: 200rpx;
}

.textBundle {
  width: 88%;
  height: 85%;
  margin: 2rpx 2rpx 2rpx 6rpx;
  align-items: center;
}

.itemTitle {
  display: flex;
  align-items: center;
  font-weight: 600;
  font-size: 30rpx;
  margin: 10rpx 2rpx 10rpx 0rpx;
  color: #1d1d1d;
}

.itemCharacterTag {
  display: flex;
  font-weight: 600;
  font-size: 24rpx;
  height: 28rpx;
  padding: 5rpx 4rpx 8rpx 4rpx;
  margin: 1rpx 8rpx 1rpx 4rpx;
  border-radius: 4rpx;
  background-color: #fd2f2fb7;
  color: white;
}
.CETag{
  background-color: #fd2f2fb7;
}
.PETag{
  background-color: #4242ecde;
}
.SETag{
  background-color: #00cd88;
}

.itemDetail {
  font-size: 24rpx;
  display: flex;
  margin-top: 5rpx;
}

.companyName{
  margin: 0rpx 2rpx 2rpx 5rpx;
  font-size: 26rpx;
  color: #1d1d1d;
}

.itemLocations{
  display: flex;
}

.item_recruitment_targets{
  display: flex;
  margin-right: 10rpx;
}

.item_recruitment_target_container{
  display: flex;
  align-items: center;
}

.recruitment_target{
  display: flex;
  font-size: 24rpx;
  padding: 4rpx 10rpx 4rpx 10rpx;
  margin: 1rpx 4rpx 1rpx 4rpx;
  border-radius: 6rpx;
  background-color: #f9efe0;
  color: #dab893;
}

.recruitment_in_compus{
  color: #66a6ff;
  background-color: #89f7fe;
}
.recruitment_in_intership{
  background-color: #b43434;
}

.itemLocationContainer{
  display: flex;
  align-items: center;
}

.itemLocation {
  display: flex;
  font-size: 24rpx;
  padding: 4rpx 10rpx 4rpx 10rpx;
  /* margin: 1rpx 4rpx 1rpx 4rpx; */
  /* border-radius: 6rpx; */
  background-color: #e7effc;
  color: #918c9f;
}

.itemPublishDate {
  padding: 2rpx 8rpx 2rpx 2rpx;
  margin: 1rpx 4rpx 1rpx 4rpx;
}

.itemWatchedContainer{
  display: flex;
  flex-wrap: nowrap;
  margin: 6rpx 18rpx 2rpx auto;
}

.itemWatchedImgContainer{
  display: flex;
  align-items: center;
  margin: 1rpx 1rpx 1rpx 10rpx;
}

.itemWatchedImg{
  height: 20rpx;
  width: 28rpx;
}

.bottom {
  padding: 30rpx 0;
  text-align: center;
  font-weight: 550;
  font-size: 30rpx;
  color: #7e6f6f;
}

.divide_line {
  margin: 0 8%;
  border-bottom: 1rpx solid #e2dddd;
}

.tabbar {
  opacity: 0.9;
}

.middle {
  flex: 1;
  position: relative;
  /* padding-top: 100rpx; */
}

.nullTip {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b1b6b6;
  font-size: 32rpx;
  width: 70%;
  margin-bottom: 5rpx;
}

.subNullTip {
  font-size: 24rpx;
  color: #a1a1a1;
}

.contact_box {
  z-index: 9;
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgb(11, 188, 212);
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 20rpx #f0f0f0 !important;
}

.contact_icon {
  font-size: 50rpx;
  color: rgb(255, 255, 255);
}

.m_image_box {
  height: 140rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swipers{
  display: flex;
  width: 95%;
  margin: 0 auto 20rpx auto;
  height: 200rpx;
  box-sizing: border-box;
}

.m_image_box image {
  height: 200rpx;
  width: 100%;
}

.fliter_enterCha_icon{
  display: flex;
  width: 48rpx;
  height: 48rpx;
  
}
.filter-title {
  background-color: white;
  padding: 20rpx;
  color: black;
}
.fliter_enterCha_container{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx;
  /* border: #7e6f6f 2rpx solid; */
}

.fliter_enterCha_container van-checkbox {
  width: 33%;
  display: flex;
